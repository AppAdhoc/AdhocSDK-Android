<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="历史浏览："
            android:textColor="@color/red2"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="horizontal">

            <ImageView
               android:id="@+id/iv_display1"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_weight="1"
                android:background="@mipmap/history1" />

            <ImageView
                android:id="@+id/iv_display2"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@mipmap/history2" />

            <ImageView
                android:id="@+id/iv_display3"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@mipmap/history3" />

            <ImageView
                android:id="@+id/iv_display4"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@mipmap/history4" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="其他人还购买了："
            android:textColor="@color/red2"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_other1"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_weight="1"
                android:background="@mipmap/other1" />

            <ImageView
                android:id="@+id/iv_other2"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@mipmap/other2" />

            <ImageView
                android:id="@+id/iv_other3"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@mipmap/other3" />

            <ImageView
                android:id="@+id/iv_other4"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:background="@mipmap/other4" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
